<h1>Songs</h1>

<%= link_to 'create song', new_song_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Genre</th>
      <th>Artist Name</th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.title %></td>
        <td><%= song.release_year %></td>
        <td><%= song.genre %></td>
        <td><%= song.artist_name %></td>
        <td>
          <%= link_to 'view', song %> |
          <%= link_to 'edit', edit_song_path(song) %> |
          <%= link_to 'delete', song, method: :delete, data: {confirm: 'are you sure you want to delete this song?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
